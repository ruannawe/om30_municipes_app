<section>
  <%= form_with model: @citizen, local: true do |form| %>

    <div class="field">
      <%= form.label :full_name, "Nome Completo" %>
      <%= form.text_field :full_name, placeholder: "Nome Completo", required: true %>
    </div>

    <div class="field">
      <%= form.label :tax_id, "CPF" %>
      <%= form.text_field :tax_id, placeholder: "CPF", required: true %>
    </div>

    <div class="field">
      <%= form.label :national_health_card, "Cart찾o SUS" %>
      <%= form.text_field :national_health_card, placeholder: "Cart찾o SUS", required: true %>
    </div>

    <div class="field">
      <%= form.label :email, "Email" %>
      <%= form.text_field :email, placeholder: "Email", required: true %>
    </div>

    <div class="field">
      <%= form.label :birthdate, "Data de Nascimento" %>
      <%= form.date_field :birthdate, placeholder: "Data de Nascimento", required: true %>
    </div>

    <div class="field">
      <%= form.label :phone, "Telefone com DDI e DDD" %>
      <%= form.text_field :phone, placeholder: "+55 (00) 0 0000-0000", required: true %>
    </div>

    <div class="field">
      <%= form.label :photo, "Foto" %>
      <% if @citizen.photo.attached? %>
        <%= form.file_field :photo, placeholder: "Foto" %>
      <% else %>
        <%= form.file_field :photo, placeholder: "Foto", required: true %>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :status, "Status" %>
      <%= form.check_box :status %>
    </div>

    <%= form.fields_for :address do |address_fields| %>
      <div class="field">
        <%= address_fields.label :zip_code, "CEP" %>
        <%= address_fields.text_field :zip_code, placeholder: "CEP", id: 'address_zip_code', required: true %>
      </div>

      <div class="field">
        <%= address_fields.label :street, "Logradouro" %>
        <%= address_fields.text_field :street, placeholder: "Logradouro", id: 'address_street', required: true %>
      </div>

      <div class="field">
        <%= address_fields.label :complement, "Complemento" %>
        <%= address_fields.text_field :complement, placeholder: "Complemento" %>
      </div>

      <div class="field">
        <%= address_fields.label :neighborhood, "Bairro" %>
        <%= address_fields.text_field :neighborhood, placeholder: "Bairro", id: 'address_neighborhood', required: true %>
      </div>

      <div class="field">
        <%= address_fields.label :city, "Cidade" %>
        <%= address_fields.text_field :city, placeholder: "Cidade", id: 'address_city', required: true %>
      </div>

      <div class="field">
        <%= address_fields.label :state, "Estado" %>
        <%= address_fields.text_field :state, placeholder: "Estado", id: 'address_state', required: true %>
      </div>

      <div class="field">
        <%= address_fields.label :ibge_code, "C처digo IBGE" %>
        <%= address_fields.text_field :ibge_code, placeholder: "C처digo IBGE", id: 'address_ibge_code' %>
      </div>
    <% end %>

    <%= form.submit @citizen.new_record? ? "Criar" : "Atualizar" %>
  <% end %>
</section>
